{
	"compilerOptions": {
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"*": ["src/*"],
			"@customTypes/*": ["src/customTypes/*"],
			"@extensions/*": ["src/customTypes/*"]
		},
		"strict": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
